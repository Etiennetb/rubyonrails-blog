<h2><%= @article.title %></h2>
<p><%= @article.text %></p>

<h2>Commentaire de l'article</h2>

<% @article.comments.each_with_index do |comment, index| %>
	<h3>Commentaire n° <%= index +1 %> </h3>
	<p><b>Commentateur: </b> <%= comment.commenter %></p>
	<p><b>Commentaire: </b> <%= comment.body %></p>
	<%end%>

<h3>Ajouter un commentaire</h3>

<%= form_tag article_comments_path(@article) do %> 
  
  <%= label_tag 'commenter', "Pseudo du commentateur" %>
  <%= text_field_tag 'commenter' %>
 
  <%= label_tag 'body', 'Texte du commentaire' %>
  <%= text_area_tag 'body' %>

  <%= submit_tag "Modifier l'article !"%>
<% end %>

 

<p><%= link_to("Revenir à la liste des articles",article_path)%></p>
<p><%= link_to("Editer l'article",edit_article_path)%></p>